@model MultiVendorModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Name" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Name" readonly/>
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="SelectedVendorIds" />
        </div>

        <div class="col-md-9">            
            <div class="input-group-append input-group-required">
                <div class="input-group">
                    <nop-select asp-for="SelectedVendorIds" asp-items="Model.AvailableVendors" asp-multiple="true" />
                </div>
                <div class="input-group-btn">
                    <nop-required />
                </div>
            </div>
            <script>
                $(document).ready(function() {
                    var vendorIdsInput = $('#@Html.IdFor(model => model.SelectedVendorIds)').data("kendoMultiSelect");
                    vendorIdsInput.setOptions({
                        vendorIdsInput: false,
                        filter: "contains"
                    });

                    @if (Model.AvailableVendors.Count == 0)
                    {
                        <text>
                             vendorIdsInput.setOptions({
                                enable: false,
                                placeholder: '@T("Admin.Customers.Customers.Fields.CustomerRoles.NoRoles")'
                            });
                            vendorIdsInput._placeholder();
                            vendorIdsInput._enable();
                        </text>
                    }
                });
            </script>
        </div>
    </div>
</div>

<nop-alert asp-alert-id="statesAlert" asp-alert-message="@T("Admin.Common.Alert.States.Failed")" />
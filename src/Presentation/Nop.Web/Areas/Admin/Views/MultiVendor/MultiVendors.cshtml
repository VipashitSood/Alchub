@model CustomerSearchModel

@using Nop.Core.Domain.Common
@{
    //page title
    ViewBag.PageTitle = T("Admin.MultiVendors").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("MultiVendors");
    //vendor
    var isMultiVendor = await workContext.GetCurrentMultiVendorAsync() != null;
}

@{
    const string hideSearchBlockAttributeName = "VendorsPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.Vendors")
    </h1>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search">
                    <div class="card-body">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                        </div>

                        <div class="search-body @(hideSearchBlock ? "closed" : "")">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchFirstName" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchFirstName" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="SearchEmail" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="SearchEmail" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center col-12">
                                    <button type="button" id="search-vendors" class="btn btn-primary btn-search">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-default">
                    <div class="card-body">
                        @await Html.PartialAsync("Table", new DataTablesModel
                   {
                       Name = "vendors-grid",
                       UrlRead = new DataUrl("MultiVendors", "MultiVendor", null),
                       SearchButtonId = "search-vendors",
                       Length = Model.PageSize,
                       LengthMenu = Model.AvailablePageSizes,
                       Filters = new List<FilterParameter>
                        {
                        new FilterParameter(nameof(Model.SearchFirstName)),
                        new FilterParameter(nameof(Model.SearchEmail))
                        },
                       ColumnCollection = new List<ColumnProperty>
                        {
                        new ColumnProperty(nameof(CustomerModel.FullName))
                        {
                        Title = T("Admin.Vendors.Fields.Name").Text,
                        Width = "300"
                        },
                        new ColumnProperty(nameof(CustomerModel.Email))
                        {
                        Title = T("Admin.Vendors.Fields.Email").Text,
                        Width = "300"
                        },
                        new ColumnProperty(nameof(CustomerModel.VendorName))
                        {
                        Title = T("Admin.Vendors.Fields.VendorName").Text,
                        Width = "300"
                        },
                        new ColumnProperty(nameof(CustomerModel.Id))
                        {
                        Title = T("Admin.Vendor.Impersonate").Text,
                        Width = "50",
                        ClassName =  NopColumnClassDefaults.Button,
                        Render = new RenderCustom("renderImpersonate")
                        }
                        }
                   })
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<script>
    function renderImpersonate(data, type, row, meta) {
        var link = "Impersonate?id=" + data;
        return '<button class="btn btn-default"><a href="' + link + '">@T("MultiVendor.Impersonate.Select")</a></button>';
    }
</script>
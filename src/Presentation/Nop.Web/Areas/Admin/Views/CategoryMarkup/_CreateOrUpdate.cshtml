@model Nop.Web.Areas.Admin.Models.Markup.CategoryMarkupModel


<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.StoreDetailsTop, additionalData = Model })
                <div class="card card-default">
                    <div class="card-body">
                        <div class="panel-body">

                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="SelectedCategoryId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="SelectedCategoryId" asp-items="Model.AvailableCategories" />
                                    <span asp-validation-for="SelectedCategoryId"></span>
                                    <input type="hidden" id="zoneId" value="@Model.Id" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="Markup" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="Markup"/>
                                    <span asp-validation-for="Markup"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.StoreDetailsBottom, additionalData = Model })
            </div>
        </div>
    </div>
</section>
@model Nop.Plugin.Payments.StripeConnectRedirect.Models.ConfigurationModel
@using Nop.Web.Framework.Models.DataTables
@using Nop.Plugin.Payments.StripeConnectRedirect.Models
@{
    Layout = "";
}

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    @await Html.PartialAsync("Table", new DataTablesModel
                    {
                    Name = "vendors-grid",
                    UrlRead = new DataUrl("VendorList", "StripeConnectRedirect", null),
                    UrlUpdate = new DataUrl("VendorConnectWithStripeUpdate", "StripeConnectRedirect", null),
                    Length = Model.VendorSearchModel.PageSize,
                    LengthMenu = Model.VendorSearchModel.AvailablePageSizes,
                    ColumnCollection = new List<ColumnProperty>
                    {
                    new ColumnProperty(nameof(StripeVendorModel.Name))
                    {
                    Title = T("Plugin.Payments.StripeConnectRedirect.Configure.Fields.Vendor.Name").Text,
                    Width = "150"
                    },
                    new ColumnProperty(nameof(StripeVendorModel.Email))
                    {
                    Title = T("Plugin.Payments.StripeConnectRedirect.Configure.Fields.Vendor.Email").Text,
                    Width = "150"
                    },
                    new ColumnProperty(nameof(StripeVendorModel.Account))
                    {
                    Title = T("Plugin.Payments.StripeConnectRedirect.Configure.Fields.Vendor.Account").Text,
                    Width = "200"
                    },
                    new ColumnProperty(nameof(StripeVendorModel.IsVerified))
                    {
                    Title = T("Plugin.Payments.StripeConnectRedirect.Configure.Fields.Vendor.IsVerified").Text,
                    Width = "50",
                    ClassName =  NopColumnClassDefaults.CenterAll,
                    Render = new RenderBoolean()
                    },
                    new ColumnProperty(nameof(StripeVendorModel.AdminDeliveryCommissionPercentage))
                    {
                    Title = T("Plugin.Payments.StripeConnectRedirect.Configure.Fields.Vendor.AdminDeliveryCommissionPercentage").Text,
                    Width = "100",
                    Editable = true,
                    EditType= EditType.Number
                    },
                    new ColumnProperty(nameof(StripeVendorModel.AdminPickupCommissionPercentage))
                    {
                    Title = T("Plugin.Payments.StripeConnectRedirect.Configure.Fields.Vendor.AdminPickupCommissionPercentage").Text,
                    Width = "100",
                    Editable = true,
                    EditType= EditType.Number
                    },
                    new ColumnProperty(nameof(StripeVendorModel.Id))
                    {
                    Title = T("Admin.Common.Edit").Text,
                    Width = "200",
                    ClassName =  NopColumnClassDefaults.Button,
                    Render = new RenderButtonsInlineEdit()
                    }
                    }
                    })
                </div>
            </div>
        </div>
    </div>
</div>
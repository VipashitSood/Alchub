@model Nop.Plugin.Tax.VendorWise.Models.ConfigurationModel
@using Nop.Web.Framework.Models.AdminAreaTour

@{
    Layout = "_ConfigurePlugin";
}
<style>
    .svbtn {
        align-self: end;
    }
</style>

<form asp-controller="VendorWiseTax" asp-action="Configure" method="post">
    <div class="content-header clearfix">
    </div>
    <section class="content">
        <div class="cards-group">
            <div class="card card-default">
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-1 text-right">
                            <nop-label asp-for="Enabled" />
                        </div>
                        <div class="col-md-2">
                            <nop-editor asp-for="Enabled" />
                            <span asp-validation-for="Enabled"></span>
                        </div>
                        <div class="col-md-9 d-flex">
                            <input type="submit" name="save" class="btn btn-primary svbtn" value="Save" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
